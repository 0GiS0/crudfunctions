{
  "bindings": [
    {
      "authLevel": "function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "post"
      ],
      "route": "api/"
    },
    {
      "name": "document",
      "type": "documentDB",
      "databaseName": "MyDatabase",
      "collectionName": "MyCollection",
      "createIfNotExists": true,
      "connection": "CosmosDBConnection",     
      "direction": "out"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    }
  ],
  "disabled": false
}